<project
    name="ibis.apps.satin.checkers"
    default="build"
    basedir=".">

    <property environment="env"/>

    <property name="ibis"        location="${env.IBIS_ROOT}"/>
    <property name="build"       value="build"/>

    <property name="main-class" value="Checkers"/>
    <property name="satin-main-class" value="${main-class}"/>

    <fileset dir="." id="src.excludes-ref">
	<include name="no_exceptions/**/*.java"/>
	<include name="seq/**/*.java"/>
	<include name="seq_exception/**/*.java"/>
    </fileset>

    <import file="${ibis}/build-files/apps/build-satin-app.xml"/>

</project>


