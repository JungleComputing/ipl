<project
    name="ibis.apps.satin.nqueens"
    default="build"
    basedir=".">

    <property environment="env"/>

    <property name="ibis"        location="${env.IBIS_ROOT}"/>
    <property name="build"       value="build"/>

    <property name="satinc-flags" value="-keep"/>
    <property name="main-class" value="NQueens"/>
    <property name="satin-main-class" value="${main-class}"/>

    <property name="ibis-run-args" value="-Dsatin.closed"/>
    <property name="test-par-run" value="NQueens 14"/>
    <property name="test-seq-run" value="NQueens 14"/>

    <fileset dir="." id="src.excludes-ref">
	<include name="abort/**/*.java"/>
	<include name="exception_threshold/**/*.java"/>
	<include name="exceptions/**/*.java"/>
	<include name="simple_abort/**/*.java"/>
	<include name="simple_exception/**/*.java"/>
    </fileset>

    <import file="${ibis}/build-files/apps/build-satin-app.xml"/>

</project>
