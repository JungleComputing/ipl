#!/bin/sh

# Like javap, but with the Ibis stuff on the classpath.

if [ -z "$IBIS_HOME" ];  then
    echo "please set IBIS_HOME to the location of your Ibis installation" 1>&2
    exit 1
fi

# deal with classpath
LIBCLASSPATH=""
add_to_libclasspath () {
    JARFILES=`cd "$1" && ls *.jar 2>/dev/null`
    for i in ${JARFILES} ; do
	if [ -z "$LIBCLASSPATH" ] ; then
	    LIBCLASSPATH="$1/$i"
	else
	    LIBCLASSPATH="$LIBCLASSPATH:$1/$i"
	fi
    done
}

# Add the following dirs to the classpath 
add_to_libclasspath "${IBIS_HOME}"/lib

# javap with classpath

JAVACLASSPATH="$CLASSPATH:$LIBCLASSPATH:build:.:"

case X$JAVA_HOME in
X)
    JAVAP=javap
    ;;
*)
    JAVAP="$JAVA_HOME/bin/javap"
    ;;
esac

"$JAVAP" -classpath "$JAVACLASSPATH" "$@"
