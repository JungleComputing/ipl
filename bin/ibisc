#!/bin/sh

# Utility script to run the Ibis frontend on the specified arguments.

if [ -z "$IBIS_HOME" ];  then
    echo "please set IBIS_HOME to the location of your Ibis installation" 1>&2
    exit 1
fi

case X"$1" in
X-cp)
    shift
    CLASSPATH="$1"
    shift
    ;;
esac

# deal with classpath
LIBCLASSPATH=""
add_to_libclasspath () {
    JARFILES=`cd "$1" && ls *.jar 2>/dev/null`
    for i in ${JARFILES} ; do
	if [ -z "$LIBCLASSPATH" ] ; then
	    LIBCLASSPATH="$1/$i"
	else
	    LIBCLASSPATH="$LIBCLASSPATH:$1/$i"
	fi
    done
}

# Add the following dirs to the classpath 
add_to_libclasspath "${IBIS_HOME}"/lib

JAVACLASSPATH="$CLASSPATH:$LIBCLASSPATH"

java -classpath "$JAVACLASSPATH" ibis.frontend.Ibisc "$@"
