#!/bin/sh

if [ -z "$IBIS_HOME" ];  then
    echo "please set IBIS_HOME to the location of your Ibis installation" 1>&2
    exit 1
fi

case "X$JAVA_HOME" in
X)
    JAVA=java
    ;;
*)
    JAVA="$JAVA_HOME/bin/java"
    ;;
esac

while [ $# -gt 0 ]
do
# echo now inspect argument $1 -- left $#
        case "$1" in
	-cp)
		shift
		CLASSPATH="$1"
		;;
	*)
		break
                ;;
        esac
        shift
done

for i in *
do
    case $i in
    *.jar)
	CLASSPATH="$CLASSPATH:$i"
	;;
    *)
	if [ -d $i ]
	then
	    CLASSPATH="$CLASSPATH:$i"
	fi
	;;
    esac
done

# deal with classpath
LIBCLASSPATH=""
add_to_libclasspath () {
    JARFILES=`cd "$1" && ls *.jar 2>/dev/null`
    for i in ${JARFILES} ; do
	if [ -z "$LIBCLASSPATH" ] ; then
	    LIBCLASSPATH="$1/$i"
	else
	    LIBCLASSPATH="$LIBCLASSPATH:$1/$i"
	fi
    done
}

# Add the following dirs to the classpath 
add_to_libclasspath "${IBIS_HOME}"/lib

JAVACLASSPATH="$CLASSPATH:$LIBCLASSPATH"

"$JAVA" -classpath "$JAVACLASSPATH" ibis.frontend.ibis.Ibisc "$@"
