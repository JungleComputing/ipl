<project
    name="ibis.apps.satin.sat"
    default="build"
    basedir=".">

    <property name="ibis"        location="../../.."/>
    <property name="build"       value="build"/>

    <!--
    <property name="satinc-flags" value=""/>
    -->

    <property name="satinc-flags" value="-keep"/>

    <property name="satin-main-class" value="Breeder SimpleSATSolver DPLLSolver SATSolver"/>
    <property name="main-class" value="DPLLSolver"/>

    <import file="${ibis}/build-files/apps/build-satin-app.xml"/>

    <target name="test"
	    depends="compile"
	    description="Run Junit test">
	<antcall target="runseq">
		<param name="runjob" value="junit.textui.TestRunner Tests"/>
	</antcall>
    </target>

    <target name="docs"
        description="Build JavaDoc documentation in `docs' directory">
	<!-- Create the javadoc directory -->
	<delete dir="docs"/>
	<mkdir dir="docs"/>
	<javadoc destdir="docs" sourcepath="${ibis}/src" author="true" version="true" use="true" windowtitle="SAT solver documentation" doctitle="SAT Solver Documentation" bottom="The Ibis project">
	<FileSet file="*.java"/>
	<classpath refid="default.classpath"/>
	</javadoc>
    </target>
</project>
