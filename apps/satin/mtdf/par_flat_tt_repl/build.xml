<project
    name="ibis.apps.satin.mtdf.par_flat_tt_repl"
    default="build"
    basedir=".">

    <property environment="env"/>

    <property name="ibis"        location="${env.IBIS_ROOT}"/>
    <property name="build"       value="build"/>

    <property name="main-class" value="Mtdf"/>
    <property name="satin-main-class" value="${main-class}"/>

    <import file="${ibis}/build-files/apps/build-satin-app.xml"/>
    <import file="${ibis}/build-files/apps/build-rmi-app.xml"/>

    <target name="build"
	    depends="init"
	    description="build Mtdf application">
	<antcall inheritAll="true" inheritRefs="true" target="compile"/>
	<antcall inheritRefs="true" target="rmic-sun"/>
	<antcall inheritRefs="true" target="do-satin"/>
	<antcall inheritRefs="true" target="iogen"/>
    </target>

</project>


