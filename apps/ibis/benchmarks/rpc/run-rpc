#!/bin/sh
# Usage:
# $0 <ibis> <ser> <count> <size> "<prun flags>" "<java flags>" "<app flags>"

ibis=$1
ser=$2
count=$3
size=$4

prunflags="$5"
javaflags="$6"
appflags="$7"

IBIS_HOME=/home1/rutger/ibis

echo ibis = $ibis ser = $ser count = $count size = $size app-flags = \"$appflags\" java-flags = \"$javaflags\"

prun -v -1 -pre-cleanup -no-panda $prunflags $IBIS_HOME/bin/run-das 2 $javaflags -Dibis.name=$ibis -Dibis.serialization=$ser -Dibis.mp.polls.optimistic=1000 RPC $count $size $appflags
