<project
    name="Ibis applications build"
    default="build"
    basedir=".">

    <description>
	Ibis applications build.
    </description>

    <target name="usage"
	    description="Print this message">
	<exec	executable="ant">
	    <arg line="-projecthelp"/>
	</exec>
	<echo message="os.name ${os.name} os.arch ${os.arch}"/>
    </target>

    <property name="ibis"        location="../.."/>

    <import file="${ibis}/build-files/build-properties.xml"/>

    <target name="-list-build-files" unless="build.files">
	<path id="buildfiles">
	    <fileset dir=".">
		<include name="*/**/build.xml"/>
	    </fileset>
	</path>
	<property name="build.files" refid="buildfiles"/>
    </target>

    <target name="load-contrib" unless="contrib-loaded">
	<taskdef resource="net/sf/antcontrib/antcontrib.properties">
	    <classpath>
		<pathelement location="${ibis}/3rdparty/ant-contrib-0.4.jar"/>
	    </classpath>
	</taskdef>
	<property name="contrib-loaded" value="true"/>
    </target>

    <target name="-do-list" depends="load-contrib">
	<foreach
	    list="${build.files}"
	    delimiter="${path.separator}"
	    target="-do-one"
	    param="build.file">
	    <param name="do-target" value="${do-target}"/>
	</foreach>
    </target>

    <!--
	Compile only
    -->
    <target name="compile"
	    depends="-list-build-files"
	    description="Compile without Ibis-serialization rewriting, or for sequential runs">
	<antcall target="-do-list">
	    <param name="do-target" value="compile"/>
	</antcall>
    </target>

    <!--
	Build
    -->
    <target name="build"
	    depends="-list-build-files"
	    description="Build Ibis applications">
	<antcall target="-do-list">
	    <param name="do-target" value="build"/>
	</antcall>
    </target>

    <!--
	Clean
    -->
    <target name="clean"
	    depends="-list-build-files"
	    description="Clean in Ibis applications">
	<antcall target="-do-list">
	    <param name="do-target" value="clean"/>
	</antcall>
    </target>

    <!--
	Test
    -->
    <target name="test"
	    depends="clean,-list-build-files"
	    description="Run tests in Ibis applications">
	<antcall target="-do-list">
	    <param name="do-target" value="test"/>
	</antcall>
    </target>

    <target name="test-seq"
	    depends="clean,-list-build-files"
	    description="Run sequential tests in Ibis applications">
	<antcall target="-do-list">
	    <param name="do-target" value="test-seq"/>
	</antcall>
    </target>

    <target name="test-par"
	    depends="clean,-list-build-files"
	    description="Run parallel tests in Ibis applications">
	<antcall target="-do-list">
	    <param name="do-target" value="test-par"/>
	</antcall>
    </target>

    <target name="test-prun"
	    depends="clean,-list-build-files"
	    description="Run parallel tests with prun in Ibis applications">
	<antcall target="-do-list">
	    <param name="do-target" value="test-prun"/>
	</antcall>
    </target>

    <target name="-do-one">
	<dirname file="${build.file}" property="build.dir"/>
	<echo message="Running 'ant ${do-target}' in ${build.dir}"/>
	<ant dir="${build.dir}" target="${do-target}" inheritAll="false"/>
    </target>

</project>
